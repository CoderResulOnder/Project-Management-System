@model projeoneritakipsistemi.Models.RegisterViewModel
@{
    ViewBag.Title = "KAYIT SAYFASI";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>YENİ KAYIT İŞLEMİ</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Kullanici Adi", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kullanıcı Türü Seçiniz", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m=>m.kullanici_turu, (new List<SelectListItem>() { new SelectListItem { Text = "Ögrenci", Selected = false, Value = "ogrenci" }, new SelectListItem { Text = "Akademisyen", Selected = false, Value = "akademisyen" }, new SelectListItem { Text = "Misafir Kullanıcı", Selected = true, Value = "diger_kullanici" }, new SelectListItem { Text = "Şirket Kaydı", Selected = false, Value = "sirket" } }))
        </div>
    </div>


    <div class="form-group">
        @Html.Label("Daha Önceden Bu Sitede Kullanmadıgınız Email adresiniz", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Parolanızı Oluşturun", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Parolanızı Tekrar Giriniz", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="KAYDET" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
